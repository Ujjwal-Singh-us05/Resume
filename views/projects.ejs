<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>


    <style>
        .project-card {
            min-height: 150px; 
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container py-5">
    <h2 class="mb-4 text-center">Projects</h2>

    <!-- Search bar -->
    <form class="d-flex mb-4" method="GET" action="/user/projects/<%= user._id %>">
        <input 
            class="form-control me-2" 
            type="search" 
            name="skill" 
            placeholder="Search by skill (e.g., Python)" 
            value="<%= typeof skill !== 'undefined' ? skill : '' %>">
        <button class="btn btn-primary" type="submit">Search</button>
    </form>

    <div class="row g-4">
        <% projects.forEach(project => { %>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border border-2 border-dark rounded-3">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary mb-2"><%= project.name %></h5>
                        <p class="card-text text-muted mb-3"><%= project.description %></p>
                        
                        <div class="mt-auto">
                            <h6 class="fw-bold">Skills Used:</h6>
                            <% project.skills.forEach(skill => { %>
                                <span class="badge bg-dark text-light me-1 mb-1"><%= skill %></span>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>




    <%- include('./partials/script') %>

</body>
</html>
